<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <LinearLayout
        android:id="@+id/guiComp1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignBottom="@id/map"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/gui_border"
        android:elevation="10dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/guiLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_alignTop="@id/gasIcon"
                android:layout_gravity="center"
                android:src="@drawable/ic_locationsearch" />

            <EditText
                android:id="@+id/gasStation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="Enter gas station"
                android:includeFontPadding="true"
                android:inputType="textPersonName"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guiLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gasIcon"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_gasicon" />

            <EditText
                android:id="@+id/fuelEfficiency"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="Enter fuel efficiency"
                android:includeFontPadding="true"
                android:inputType="textPersonName"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guiLayout3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/kmRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:ellipsize="middle"
                    android:scrollbarSize="4dp"
                    android:text="km/hr"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/miRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:text="mi/hr"
                    android:textSize="10sp" />

            </RadioGroup>

            <Button
                android:id="@+id/trackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#32DA3A3A"
                android:fontFamily="@font/fjalla_one"
                android:foregroundGravity="left"
                android:text="Start Tracking"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>