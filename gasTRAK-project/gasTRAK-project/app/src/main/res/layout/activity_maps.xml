<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/relLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />

        <LinearLayout
            android:id="@+id/guiSidebar"
            android:layout_width="65dp"
            android:layout_height="275dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gui_border"
            android:elevation="5dp"
            android:foregroundGravity="left"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hamMenuIcon"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:foregroundGravity="center"
                android:padding="10dp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_hamburgermenu" />

            <ImageView
                android:id="@+id/findLocationIcon"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_findlocation" />

            <ImageView
                android:id="@+id/nearbyStationIcon"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_nearbystation" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary" />

            <ImageView
                android:id="@+id/zoomInIcon"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_zoom_in" />

            <ImageView
                android:id="@+id/zoomOutIcon"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_zoom_out" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/guiComp1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignBottom="@id/map"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gui_border"
            android:elevation="10dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/guiLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_alignTop="@id/gasIcon"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_locationsearch" />

                <EditText
                    android:id="@+id/gasStation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="Enter gas station"
                    android:imeOptions="actionSearch"
                    android:includeFontPadding="true"
                    android:inputType="textPersonName"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/guiLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gasIcon"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_gasicon" />

                <EditText
                    android:id="@+id/fuelEfficiency"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="Enter fuel efficiency"
                    android:includeFontPadding="true"
                    android:inputType="textPersonName"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/guiLayout3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/kmRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:ellipsize="middle"
                        android:fontFamily="sans-serif"
                        android:scrollbarSize="4dp"
                        android:text="km/hr"
                        android:textSize="10sp" />

                    <RadioButton
                        android:id="@+id/miRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:ellipsize="middle"
                        android:fontFamily="sans-serif"
                        android:text="mi/hr"
                        android:textSize="10sp" />

                </RadioGroup>

                <Button
                    android:id="@+id/trackButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/viga"
                    android:foregroundGravity="left"
                    android:text="Start Tracking"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/ham_menu_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/ham_menu_header"
        app:menu="@menu/hamburger_menu" />

</android.support.v4.widget.DrawerLayout>